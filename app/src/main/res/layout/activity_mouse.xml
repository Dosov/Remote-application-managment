<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fon2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.client100.MouseActivity">

    <Button
        android:id="@+id/buttonPlayerPlay"
        android:layout_width="187dp"
        android:layout_height="170dp"
        android:layout_alignEnd="@+id/buttonPlayerRev"
        android:layout_alignRight="@+id/buttonPlayerRev"
        android:layout_centerVertical="true"
        android:layout_weight="0.25"
        android:background="@drawable/player_fast_forward" />

    <Button
        android:id="@+id/buttonPlayerPause"
        android:layout_width="184dp"
        android:layout_height="169dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_weight="0.25"
        android:background="@drawable/player_fast_rewind" />

    <Button
        android:id="@+id/buttonBack5"
        android:layout_width="185dp"
        android:layout_height="190dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_weight="0.25"
        android:background="@drawable/player_previous_track" />

    <Button
        android:id="@+id/buttonPlayerStop"
        android:layout_width="176dp"
        android:layout_height="186dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_weight="0.25"
        android:background="@drawable/player_pause" />

    <Button
        android:id="@+id/buttonPlayerRev"
        android:layout_width="189dp"
        android:layout_height="188dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_weight="0.25"
        android:background="@drawable/player_next_track" />

    <Button
        android:id="@+id/buttonPlayer"
        android:layout_width="193dp"
        android:layout_height="186dp"
        android:layout_alignStart="@+id/buttonPlayerPlay"
        android:layout_alignLeft="@+id/buttonPlayerPlay"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-1dp"
        android:layout_marginLeft="-1dp"
        android:layout_weight="0.25"
        android:background="@drawable/player_play" />


</RelativeLayout>
