<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.client100.MouseActivity">

    <Button
        android:id="@+id/buttonPlayerPlay"
        android:layout_width="155dp"
        android:layout_height="216dp"
        android:layout_alignEnd="@+id/buttonPlayerRev"
        android:layout_alignRight="@+id/buttonPlayerRev"
        android:layout_centerVertical="true"
        android:layout_weight="0.25"
        android:background="@drawable/player_fast_forward" />

    <Button
        android:id="@+id/buttonPlayerPause"
        android:layout_width="173dp"
        android:layout_height="220dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_weight="0.25"
        android:background="@drawable/player_fast_rewind" />

    <Button
        android:id="@+id/buttonBack5"
        android:layout_width="171dp"
        android:layout_height="201dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_weight="0.25"
        android:background="@drawable/player_previous_track" />

    <Button
        android:id="@+id/buttonPlayerStop"
        android:layout_width="188dp"
        android:layout_height="212dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_weight="0.25"
        android:background="@drawable/player_pause" />

    <Button
        android:id="@+id/buttonPlayerRev"
        android:layout_width="176dp"
        android:layout_height="203dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:layout_weight="0.25"
        android:background="@drawable/player_next_track" />

    <Button
        android:id="@+id/buttonPlayer"
        android:layout_width="139dp"
        android:layout_height="200dp"
        android:layout_alignStart="@+id/buttonPlayerPlay"
        android:layout_alignLeft="@+id/buttonPlayerPlay"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-10dp"
        android:layout_marginLeft="-10dp"
        android:layout_weight="0.25"
        android:background="@drawable/player_play" />


</RelativeLayout>
